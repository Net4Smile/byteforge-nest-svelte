model Subcategories {
  id         String    @id @unique @default(uuid())
  name       String
  Category   Category? @relation(fields: [categoryId], references: [id])
  categoryId String?
}

model Category {
  id            String          @id @unique @default(uuid())
  name          String
  products      Product[]
  subcategories Subcategories[]
}

model Specification {
  id       String    @id @unique @default(uuid())
  name     String
  value    String
  products Product[]
}

model Product {
  id          String          @id @unique @default(uuid())
  name        String
  description String
  price       String
  image       ProductImage[]
  categories  Category[]
  specs       Specification[]
}

model ProductImage {
  id        String  @id @unique @default(uuid())
  src       String
  alt       String?
  productId String
  product   Product @relation(fields: [productId], references: [id])
}
